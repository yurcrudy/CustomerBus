    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" />
    <style name="FullTheme" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="aspect_both_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="aspect_both_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="aspect_wrap_match">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="aspect_match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 默认 action bar 样式-->
    <style name="actionbar_default">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:padding">@dimen/default_padding</item>
    </style>

    <!-- 默认 action bar title样式-->
    <style name="actionbar_title" parent="aspect_both_wrap">
        <item name="android:textSize">@dimen/font_xl</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLength">15</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">none</item>
    </style>

</resources>
