    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" />
    <style name="FullTheme" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="aspect_both_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="aspect_both_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="aspect_wrap_match">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="aspect_match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 默认 action bar 样式-->
    <style name="actionbar_default">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/theme_color</item>
        <item name="android:padding">@dimen/default_padding</item>
    </style>

    <!-- 默认 action bar title样式-->
    <style name="actionbar_title" parent="aspect_both_wrap">
        <item name="android:textSize">@dimen/font_xl</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLength">10</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">none</item>
    </style>
    <!-- 默认 home_grid_title 样式-->
    <style name="home_grid_title" parent="aspect_both_wrap">
        <item name="android:textSize">@dimen/font_l</item>
        <item name="android:textColor">@color/home_grid_title</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingBottom">@dimen/fifteen_padding</item>
    </style>


    <!-- 默认 actionbar_back 样式-->
    <style name="actionbar_left" parent="aspect_both_wrap">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="bus_line_detail_ll" parent="aspect_match_wrap">
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">@dimen/default_padding</item>
        <item name="android:paddingBottom">@dimen/default_padding</item>
        <item name="android:paddingRight">@dimen/default_padding</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="bus_line_detail_hint" parent="aspect_both_wrap">
        <item name="android:textSize">@dimen/font_xl</item>
        <item name="android:textColor">@color/bus_line_detail_text</item>
    </style>

    <style name="bus_line_detail_txt">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/font_xl</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingLeft">@dimen/default_padding</item>
    </style>

    <style name="bus_line_detail_hint_two" parent="aspect_match_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/bus_line_detail_text</item>
        <item name="android:paddingTop">@dimen/default_padding</item>
        <item name="android:paddingBottom">@dimen/default_padding</item>
    </style>

    <style name="actionbar_right" parent="aspect_both_wrap">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="actionbar_city_right" parent="aspect_both_wrap">
        <item name="android:textSize">@dimen/font_xl</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
