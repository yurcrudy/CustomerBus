<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surround_bus_background">
    <RelativeLayout
        style="@style/actionbar_default">
        <ImageView
            android:id="@+id/iv_back"
            style="@style/actionbar_left"
            android:src="@drawable/btn_actionbar_back"/>
        <LinearLayout
            android:layout_toRightOf="@id/iv_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_title"
                style="@style/actionbar_title"
                android:maxLength="25"
                android:text="@string/surround_bus_title"/>
        </LinearLayout>

    </RelativeLayout>
    <ListView
        android:id="@+id/lv_bus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/default_padding"
        android:layout_marginLeft="@dimen/default_padding"
        android:layout_marginRight="@dimen/default_padding"
        android:background="@color/surround_bus_background"
        android:dividerHeight="10dp"
        android:divider="@color/surround_bus_background"/>
</LinearLayout>